@model List<ReporterDay.PresentationLayer.Models.Components.RecentArticleListItemViewModel>

<div class="recent-posts widget-item">
    <h3 class="widget-title">Son Makaleler</h3>

    @if (Model == null || Model.Count == 0)
    {
        <p class="text-muted mb-0">Henüz makale yok.</p>
    }
    else
    {
        foreach (var item in Model)
        {
            var img = string.IsNullOrWhiteSpace(item.CoverImageUrl)
            ? Url.Content("~/ZenBlog-1.0.0/assets/img/post-landscape-1.jpg")
            : item.CoverImageUrl;

            <div class="post-item d-flex align-items-start mb-3">
                <img src="@img"
                     alt="@item.Title"
                     class="flex-shrink-0"
                     style="width:64px;height:64px;object-fit:cover;border-radius:10px;" />

                <div class="ms-3 flex-grow-1">
                    <h4 class="mb-1" style="font-size:14px; line-height:1.25; font-weight:600;">
                        <a href="@item.DetailUrl"
                           class="text-decoration-none"
                           style="
                                        color: inherit;
                                        display: -webkit-box;
                                        -webkit-line-clamp: 2;
                                        -webkit-box-orient: vertical;
                                        overflow: hidden;">
                            @item.Title
                        </a>
                    </h4>

                    <time datetime="@item.CreatedDate.ToString("yyyy-MM-dd")"
                          class="text-muted"
                          style="font-size:12px;">
                        @item.CreatedDate.ToString("dd MMM yyyy")
                    </time>
                </div>
            </div>
        }
    }
</div>
