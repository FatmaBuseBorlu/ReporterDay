@model ReporterDay.PresentationLayer.Models.Articles.PagedArticleListVm

<div class="container">
    <div class="row">
        <div class="col-lg-12">

            <section id="blog-posts" class="blog-posts section">
                <div class="container">
                    <div class="row gy-4">

                        @if (Model?.Articles == null || Model.Articles.Count == 0)
                        {
                            <div class="col-12">
                                <div class="alert alert-info mb-0">Henüz makale yok.</div>
                            </div>
                        }
                        else
                        {
                            foreach (var item in Model.Articles)
                            {
                                <div class="col-lg-4">
                                    <article class="position-relative h-100">

                                        <div class="post-img position-relative overflow-hidden">
                                            <img src="@item.CoverImageUrl"
                                                 class="img-fluid"
                                                 alt="@item.Title"
                                                 style="width:400px; height:250px; object-fit:cover;">
                                            <span class="post-date">@item.CreatedDate.ToString("dd-MMM-yyyy")</span>
                                        </div>

                                        <div class="post-content d-flex flex-column">

                                            <h3 class="post-title">@item.Title</h3>

                                            <div class="meta d-flex align-items-center">
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-person"></i>
                                                    <span class="ps-2">@item.AuthorFullName</span>
                                                </div>
                                                <span class="px-3 text-black-50">/</span>
                                                <div class="d-flex align-items-center">
                                                    <i class="bi bi-folder2"></i>
                                                    <span class="ps-2">@item.CategoryName</span>
                                                </div>
                                            </div>

                                            <p>@item.Preview</p>

                                            <hr>

                                            <a asp-controller="Article"
                                               asp-action="ArticleDetail"
                                               asp-route-id="@item.ProtectedId"
                                               class="readmore stretched-link">
                                                <span>Devamını Okuyun</span><i class="bi bi-arrow-right"></i>
                                            </a>

                                        </div>

                                    </article>
                                </div>
                            }
                        }

                    </div>
                </div>
            </section>

            @if (Model != null && Model.TotalPages > 1)
            {
                <section id="blog-pagination" class="blog-pagination section">
                    <div class="container">
                        <div class="d-flex justify-content-center">
                            <ul>

                                <li class="@(Model.CurrentPage <= 1 ? "disabled" : "")">
                                    <a href="@Url.Action("Index", "Default", new { page = Math.Max(1, Model.CurrentPage - 1) })">
                                        <i class="bi bi-chevron-left"></i>
                                    </a>
                                </li>

                                @{

                                    var current = Model.CurrentPage;
                                    var total = Model.TotalPages;

                                    var start = Math.Max(1, current - 2);
                                    var end = Math.Min(total, current + 2);

                                    if (start > 1)
                                    {
                                        <li><a href="@Url.Action("Index", "Default", new { page = 1 })">1</a></li>
                                        ;

                                        if (start > 2)
                                        {
                                            <li class="disabled"><a href="#">...</a></li>
                                            ;
                                        }
                                    }

                                    for (int p = start; p <= end; p++)
                                    {
                                        if (p == current)
                                        {
                                            <li><a class="active" href="#">@p</a></li>
                                        }
                                        else
                                        {
                                            <li>
                                                <a href="@Url.Action("Index", "Default", new { page = p })">@p</a>
                                            </li>
                                        }
                                    }
                                    if (end < total)
                                    {
                                        if (end < total - 1)
                                        {
                                            <li class="disabled"><a href="#">...</a></li>
                                        }

                                        <li><a href="@Url.Action("Index", "Default", new { page = total })">@total</a></li>
                                    }
                                }
                                <li class="@(Model.CurrentPage >= Model.TotalPages ? "disabled" : "")">
                                    <a href="@Url.Action("Index", "Default", new { page = Math.Min(Model.TotalPages, Model.CurrentPage + 1) })">
                                        <i class="bi bi-chevron-right"></i>
                                    </a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </section>
            }

        </div>
    </div>
</div>
