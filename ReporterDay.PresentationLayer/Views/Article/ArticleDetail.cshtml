@model ReporterDay.PresentationLayer.Models.Articles.ArticleDetailPageVm

@{
    Layout = null;

    var articleId = Model?.ArticleId ?? 0;
    var protectedId = Model?.ProtectedArticleId ?? "";
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_HeadDefaultComponentPartial")

<body class="single-post-page">

    @await Component.InvokeAsync("_ArticleDetailNavbarComponentPartial")

    <main class="main">
        <div class="container">
            <div class="row">

                @if (articleId <= 0 || string.IsNullOrWhiteSpace(protectedId))
                {
                    <div class="col-12">
                        <div class="alert alert-danger mt-4">
                            Makale bilgisi alınamadı (id boş geldi). Lütfen liste sayfasından tekrar deneyin.
                        </div>
                    </div>
                }
                else
                {
                    <div class="col-lg-8">

                        @await Component.InvokeAsync("_ArticleDetailContentComponentPartial", new { id = articleId })

                        <div id="commentsContainer">
                            @await Component.InvokeAsync("_ArticleDetailCommentsComponentPartial", new { id = articleId })
                        </div>

                        @await Component.InvokeAsync("_ArticleDetailAddCommentComponentPartial",
                        new { protectedArticleId = protectedId })

                </div>

                <div class="col-lg-4 sidebar">
                    <div class="widgets-container">

                        @await Component.InvokeAsync("_ArticleDetailAboutAuthorComponentPartial")

                        @await Component.InvokeAsync("_ArticleDetailRecentArticlesComponentPartial",
                                                new { currentArticleId = articleId })

                        @await Component.InvokeAsync("_ArticleDetailTagListComponentPartial")

                    </div>
                </div>
                                }

            </div>
        </div>
    </main>

    @await Component.InvokeAsync("_FooterDefaultComponentPartial")

</body>
</html>
