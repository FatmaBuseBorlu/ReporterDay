@model ReporterDay.PresentationLayer.Models.HomeArticleListViewModel

@{
    ViewData["Title"] = "Makaleler";
}

<div class="container py-4">

    <div class="row g-4">
        @foreach (var item in Model.Articles)
        {
            var cover = string.IsNullOrWhiteSpace(item.CoverImageUrl)
            ? "/images/no-image.jpg"
            : item.CoverImageUrl;

            var excerpt = string.IsNullOrWhiteSpace(item.Content)
            ? ""
            : (item.Content.Length > 140 ? item.Content.Substring(0, 140) + "..." : item.Content);

            <div class="col-12 col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm">

                    <a asp-controller="Article" asp-action="ArticleDetail" asp-route-id="@item.ArticleId" class="text-decoration-none">
                        <img src="@cover" class="card-img-top" style="height:220px; object-fit:cover;" alt="@item.Title" />
                    </a>

                    <div class="card-body d-flex flex-column">

                        <div class="small text-muted mb-2">
                            @item.CreatedDate.ToString("dd.MM.yyyy")
                            <span class="mx-2">•</span>
                            <span>@(item.Category?.CategoryName ?? "Kategori yok")</span>
                        </div>

                        <h5 class="card-title">
                            <a asp-controller="Article" asp-action="ArticleDetail" asp-route-id="@item.ArticleId" class="text-decoration-none">
                                @item.Title
                            </a>
                        </h5>

                        @if (!string.IsNullOrWhiteSpace(excerpt))
                        {
                            <p class="card-text text-muted">@excerpt</p>
                        }

                        <div class="mt-auto d-flex align-items-center justify-content-between">
                            <div class="small text-muted">
                                @(item.AppUser?.UserName ?? "Yazar yok")
                            </div>

                            <a asp-controller="Article" asp-action="ArticleDetail" asp-route-id="@item.ArticleId" class="btn btn-sm btn-primary">
                                Devamı
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>

    <div class="d-flex justify-content-center mt-4">
        <nav aria-label="Sayfalama">
            <ul class="pagination mb-0">

                <li class="page-item @(Model.HasPreviousPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-controller="Article"
                       asp-action="Index"
                       asp-route-page="@(Model.CurrentPage - 1)">
                        Önceki
                    </a>
                </li>

                @{
                    int start = Math.Max(1, Model.CurrentPage - 2);
                    int end = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                }

                @for (int i = start; i <= end; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           asp-controller="Article"
                           asp-action="Index"
                           asp-route-page="@i">
                            @i
                        </a>
                    </li>
                }

                <li class="page-item @(Model.HasNextPage ? "" : "disabled")">
                    <a class="page-link"
                       asp-controller="Article"
                       asp-action="Index"
                       asp-route-page="@(Model.CurrentPage + 1)">
                        Sonraki
                    </a>
                </li>

            </ul>
        </nav>
    </div>

</div>
